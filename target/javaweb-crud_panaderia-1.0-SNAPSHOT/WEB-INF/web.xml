<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>listar</servlet-name>
        <servlet-class>com.proyectos.javaweb.crud.Controlador.listar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>agregar</servlet-name>
        <servlet-class>com.proyectos.javaweb.crud.Controlador.agregar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminar</servlet-name>
        <servlet-class>com.proyectos.javaweb.crud.Controlador.eliminar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actualizar</servlet-name>
        <servlet-class>com.proyectos.javaweb.crud.Controlador.actualizar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listar</servlet-name>
        <url-pattern>/listar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agregar</servlet-name>
        <url-pattern>/agregar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eliminar</servlet-name>
        <url-pattern>/eliminar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actualizar</servlet-name>
        <url-pattern>/actualizar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
